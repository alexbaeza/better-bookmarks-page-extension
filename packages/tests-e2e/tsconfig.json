{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["../../src/*"]
    },
    "skipLibCheck": true,
    "strict": false,
    "target": "ES2020",
    "types": ["cypress", "node"]
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "cypress.config.ts"]
}
