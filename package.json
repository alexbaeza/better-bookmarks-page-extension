{
  "name": "better-bookmarks-page-extension",
  "version": "3.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "release": "./scripts/create-release.sh",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "cypress run",
    "test:e2e:headed": "cypress open",
    "test:e2e:chrome": "cypress run --browser chrome",
    "test:e2e:firefox": "cypress run --browser firefox",
    "audit": "pnpm audit --audit-level moderate",
    "preview": "vite preview --port 3000 --host 0.0.0.0",
    "commitlint": "commitlint --edit",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0",
    "changelog:all": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s",
    "semantic-release": "semantic-release",
    "prepare": "husky install",
    "commit": "./scripts/conventional-commit.sh"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@types/firefox-webext-browser": "^143.0.0",
    "axios": "^1.7.7",
    "formik": "^2.4.6",
    "framer-motion": "^12.10.1",
    "jotai": "^2.10.0",
    "lucide-react": "^0.546.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.6.0",
    "web-vitals": "^5.1.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^20.0.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "@biomejs/biome": "^1.9.4",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/chrome": "^0.1.24",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.18",
    "conventional-changelog-cli": "^4.1.0",
    "cypress": "^13.15.0",
    "happy-dom": "^20.0.5",
    "husky": "^9.1.6",
    "msw": "^2.11.5",
    "postcss": "^8.4.35",
    "semantic-release": "^23.0.0",
    "tailwindcss": "^3.4.18",
    "tailwindcss-themer": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vitest": "^3.2.4",
    "vitest-when": "^0.8.1",
    "wait-on": "^8.0.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.1.6",
    "conventional-changelog-cli": "^4.1.0",
    "semantic-release": "^23.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.0",
    "@semantic-release/npm": "^11.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
